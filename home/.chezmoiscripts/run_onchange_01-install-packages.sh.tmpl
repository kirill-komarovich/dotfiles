{{ if (eq .chezmoi.os "linux") -}}

{{ $repos := list
  "ppa:git-core/ppa"
-}}

{{ $packages := list
  "git"
  "curl"
-}}

#!/bin/bash

set -eufo pipefail

{{ $sudo := "sudo " -}}
{{ if eq .chezmoi.username "root" -}}
{{   $sudo = "" -}}
{{ end -}}

{{ $sudo }}add-apt-repository -y {{ $repos | join " " }}
{{ $sudo }}apt update
{{ $sudo }}apt install -y {{ $packages | join " " }}

{{ end -}}
